<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/kotlinCoroutineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kotlin Coroutine Example"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kotlinFlowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kotlin Flow Example"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kotlinCoroutineButton" />

    <Button
        android:id="@+id/kotlinHiltButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kotlin Hilt Example"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kotlinFlowButton" />

</androidx.constraintlayout.widget.ConstraintLayout>